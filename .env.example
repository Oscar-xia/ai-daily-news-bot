# =============================================================================
# AI Daily News Bot - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/news.db

# LLM API Configuration (choose one)
# Option 1: OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o

# Option 2: 智谱 AI (GLM)
# ZHIPU_API_KEY=your_zhipu_api_key
# ZHIPU_MODEL=glm-4

# Option 3: 通义千问 (Qwen)
# DASHSCOPE_API_KEY=your_dashscope_api_key
# QWEN_MODEL=qwen-max

# LLM Provider Selection: openai, zhipu, qwen
LLM_PROVIDER=openai

# Tavily API (AI Search)
TAVILY_API_KEY=your_tavily_api_key

# RSSHub Configuration (Twitter Collection)
RSSHUB_BASE_URL=https://rsshub.app
# Or self-hosted:
# RSSHUB_BASE_URL=http://localhost:1200

# Apify Configuration (Optional, for stable Twitter collection)
# APIFY_API_TOKEN=your_apify_token

# Twitter Usernames to Follow (comma-separated)
TWITTER_USERS=openai,anthropicai,GoogleDeepMind

# Scheduler Configuration
SCHEDULER_ENABLED=true
COLLECT_INTERVAL_HOURS=2
REPORT_GENERATION_HOUR=6

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
